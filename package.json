{
  "name": "loja-fullstack",
  "version": "1.0.0",
  "description": "Loja Full Stack MERN",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node seeder.js",
    "data:destroy": "node seeder.js -d",
    "test:backend": "cross-env NODE_ENV=test jest --no-cache",
    "test:frontend": "cd frontend && npm test -- --watchAll=false --no-cache",
    "test": "npm run test:backend && npm run test:frontend",
    "test:ci": "npm run test:backend && npm run test:frontend"
  },
  "author": "Emerson",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^10.21.0",
    "@sentry/profiling-node": "^10.21.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "cypress": "^15.5.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
